<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('inventory') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('home') %></div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= make_breadcrumb %>
    <%= render_breadcrumbs  %>
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">

<%  if permitted_to? :reports, :inventory_reports %>
      <div class="link-box">
        <div class="link-heading"><%= link_to "#{t('reports_text')}",{:action=>'reports', :controller => 'inventory_reports'} %>  </div>
        <div class="link-descr"><%="#{t('generate')} #{t('reports_text')}" %></div>
      </div>
    <% end %>

    <%  if permitted_to? :sales_reports, :inventory_reports %>
      <div class="link-box">
        <div class="link-heading"><%= link_to "#{t('sales_reports')}",{:action=>'sales_reports', :controller => 'inventory_reports'} %>  </div>
        <div class="link-descr"><%="#{t('sales_reports_text')}" %></div>
      </div>
    <% end %>
    <div class="extender"></div>
  </div>
</div>