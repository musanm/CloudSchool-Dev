<div id="content-header">
  <%= show_header_icon %>
  <h1><%= "#{t('library_text')}"%></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= "#{t('issue_book_text')}"%></div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= make_breadcrumb %>
    <%= render_breadcrumbs  %>
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation">
      <ul>
        <li>
          <%= flash[:warn_notice] %>
        </li>
      </ul>
    </div>
  <% end %>
  <div class="search_form">
    <% remote_form_for :search,:url=>{:controller=>'book_movement', :action=>'direct_issue_book'}  do |f| %>
      <div class="label-field-pair">
        <label for="book number"><%= "#{t('book_number/barcode')}"%></label>
        <div class="text-input-bg">
          <%= f.text_field :query %>
        </div>
      </div>
      <%= f.submit "#{t('search_text')}", :class=>'submit_button' %>
    <% end %>
  </div>
    <div id="book-list">

  </div>
</div>
