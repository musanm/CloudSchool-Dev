<% unless @members.empty? %>
  <div class="member-list">
    <div class="label_text">
      <%= t('selected_recipients') %>
    </div>
    <% disabled_members = @disabled_members.present? ? @disabled_members.split(',') : [] %>
    <div class="label-field-pair-document-small">
      <div class ="scrolable" >
        <% x = '<span> x </span>' %>
        <div class="scroll-inside">
          <% @members.each do |m|  %>
            <div class="hover">
              <% if disabled_members.include? m.id.to_s %>
              <div class="individual_disabled">
                <%= shorten_string(m.full_name,18) %>
              </div>
              <% else %>
                <%= link_to shorten_string(m.full_name,18) + x, "#", :onClick => "remove_member(#{m.id})", :id=> "member_#{m.id}",:class=> 'individual',
                  :before => "Element.show('loader')",
                  :success => "Element.hide('loader')" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="extender"></div>
<% end %>
