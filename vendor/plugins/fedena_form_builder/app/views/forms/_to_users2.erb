<% string = @to_users.inject('') { |arr, u| arr + u.user_id.to_s + ',' }.chomp(',') %>
<% add = "<span>#{t('add')}</span>" %>
<div class="label-field-pair-form">
  <label for="student_grade"><%= t('select_recipient') %></label>
  <div class ="scrolable" >
    <div class="scroll-inside">
      <div class="hover">
        <%= link_to "#{t('select_all')}", '#', :onClick => "add_all_member('#{string}');add_all_students('#{string}')", :class=> 'all' %>
        <%= link_to "#{t('none')}", '#', :onClick => "remove_all_member('#{string}');remove_all_student('#{string}')", :class=> 'all' %>
      </div>
      <% @to_users.each do |t| %>
        <div class="hover"><%= link_to shorten_string(t.full_name,18)+add  , '#', :onClick => "add_member(#{t.user_id});add_student(#{t.user_id})", :class=>'individual',
            :before => "Element.show('loader')",
            :success => "Element.hide('loader')" %>

        </div>
      <% end %>
    </div>
  </div>
</div>



