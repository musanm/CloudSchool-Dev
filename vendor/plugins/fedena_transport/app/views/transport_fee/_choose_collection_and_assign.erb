<div class="label-field-pair-batches" id="hide1"><label><%= t('select_a_batch') %>:</label>
  <div class="text-input-bg"> <%= select :fees_submission, :batch_id, @batches.map { |c| [c.full_name, c.id] },
                                         {:prompt => "#{t('select_a_batch')}"},
                                         {:onChange => "#{remote_function(:url => {:action => "update_fees_collections"},
                                                                          :with => "'batch_id='+value",
                                                                          :before => "Element.show('loader')",
                                                                          :success => "Element.hide('loader')")}"
                                         }%>
  </div>

  <div class="loader_div">
    <%= image_tag("loader.gif",
                  :align => "absmiddle",
                  :border => 0,
                  :id => "loader",
