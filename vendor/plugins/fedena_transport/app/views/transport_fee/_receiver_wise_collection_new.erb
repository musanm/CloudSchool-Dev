<div id="page-yield">

  <div id="flash_box">
  </div>
  <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <% remote_form_for @transport_fee_collection,
              :url => {:action => 'receiver_wise_fee_collection_creation'},:html=>{:id=>'form'} do |form| %>

      <div id="form-errors"><%= error_messages_for 'transport_fee_collection' %></div>
      <div id="left-side-inputs">
        <div class="label-field-pair" style="margin-bottom: 16px">
          <label><%= t('transport_fee_name') %><span class="necessary-field">*</span> :</label>

          <div class="text-input-bg"><%= form.text_field :name %></div>
        </div>
        <div class="start_and_end_date ">
          <div class="label-field-pair start-date" style="margin-bottom: 16px">
          <label><%= "#{t('start_date')}" %>:</label>

          <div class="text-input-bg"><%= calendar_date_select_tag 'transport_fee_collection[start_date]', I18n.l(@transport_fee_collection.end_date || Date.today, :format => :default), :readonly => true, :popup => "force" %></div>
        </div>


        <div class="label-field-pair end-date" style="margin-bottom: 16px">
          <label for="reason" style="width:80px">  <%= t('end_date') %>:</label>

          <div class="text-input-bg"><%= calendar_date_select_tag 'transport_fee_collection[end_date]', I18n.l(@transport_fee_collection.end_date || Date.today, :format => :default), :readonly => true, :popup => "force" %></div>
        </div>
        </div>
        <div class="label-field-pair" style="margin-bottom: 16px">
          <label for="reason">  <%= t('due_date') %>:</label>

          <div class="text-input-bg"><%= calendar_date_select_tag 'transport_fee_collection[due_date]', I18n.l(@transport_fee_collection.due_date || Date.today, :format => :default), :readonly => true, :popup => "force" %>
          </div>
        </div>

<%= render :partial => 'search_students',:locals=>{:form=>form} %>

      <div class="extender"></div>
      <div id="submit-button">
        <%= submit_tag "► #{t('create_text')}", :class => 'submit_button', :disable_with => "► #{t('please_wait')}",:onclick=>'return function submit()' %>
      </div>
  <% end %>
</div>
</div>
