<% transport_fee_collections= student.transport_fee_collections %>
<%p transport_fee_collections%>
<% unless transport_fee_collections.nil? %>
  <% transport_fee_collections.each do |d| %>
    <tr>
      <td>
        <label class="name"><%= d.name %></label>
        <label class="description"><%= d.due_date %></label>
      </td>
      <td>
        <% @balance = student.transport_fee_balance(d.id)  %>
        <% if @balance == 0 %>
          <label class="paid"><%= t("paid") %></label>
        <% else %>
          <label class="unpaid"><%= t("unpaid") %></label>
          <label class="description"><%= precision_label(@balance) %></label>
        <% end %>
      </td>
    </tr>
  <% end %>
<% end %>
