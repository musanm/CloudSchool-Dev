<div class="label-field-pair-select-class">
  <label for="student-detail-select-class"><%= t('select_a_department') %>: </label>

  <div class="text-input-bg"><%= select :department, :department_id,
                                        @employee_departments.map { |ed| ["#{ed.name}-#{ed.code}", ed.id] },
                                        {:prompt => "#{ t('select_a_department')}"},
                                        {:onChange => "#{remote_function(:url => {:action => "list_employees_by_department"},
                                                                         :with => "'department_id='+value",
                                                                         :before => "Element.show('loader')",
                                                                         :success => "Element.hide('loader')",
                                                                         :update => "receivers"
                                        )}"} %></div>
  <%= image_tag("loader.gif",
                :align => "absmiddle",
                :border => 0,
                :id => "loader",
                :style => "display: none;") %>
</div>