<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('transport_text') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('view_transport_fee_collection_dates') %></div>
  <div id="inner-tab-menu">
    <ul>
    </ul>
  </div>
</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= make_breadcrumb %>
    <%= render_breadcrumbs  %>
  </div>
  <div id="flash-box">
    <% unless flash.now[:error].nil? %><div id="errorExplanation" class="errorExplanation"><ul><li><%= flash.now[:error] %></li></ul></div><% end %>
  </div>
  <div class="box">
    <div class="label-field-pair"><label><%= t('select_a_user_type') %></label>
      <div class="text-input-bg"><%= select :user_type,"",
          [["#{t('employee_text')}",'employee'],["#{t('student_text')}",'student']],
          {:prompt => "#{t('select_one')}"},
          {:onChange => "#{remote_function(:url => {:action => "update_user_ajax"},
          :with => "'user_type='+ value",
          :before => "Element.show('loader')",
          :success => "Element.hide('loader')"
          )}"}
      %>
      </div>
      <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader",:style =>"display: none;" ) %>
    </div>
    <div id="batch_list" class="label-field-pair"></div>
  </div>
  <div id="fee_collection_list"></div>

  <div id="fee_collection_dates"></div>
  <div id="modal-box" style="display:none;"></div>
</div>
