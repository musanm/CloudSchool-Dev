<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <% form_for(@reporting_time) do |f| %>
    <%= f.error_messages %>
    <div id="admission1_form">
      <div class="label-field-pair">
        <% if ((params[:in_time] == "true") || (@reporting_time.is_in_time?)) %>
          <label for="student_grade">In TIme</label>
          <div class="text-input-bg">
            <%= f.text_field :time_in %>
          </div>
        <% else %>
          <label for="student_grade">Out TIme</label>
            <div class="text-input-bg">
              <%= f.text_field :out_time %>
            </div>
        <% end %>
      </div>
      <%= f.hidden_field :is_in_time, :value => (params[:in_time] == "true")  %>
    </div>
    <%= f.submit"", :value => "► #{t('save_and_proceed')}", :class => "submit_button", :disable_with => "► #{t('please_wait')}" %>
  <% end %>
</div>
