<div id="content-header">
  <h1>Employee</h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'>Reporting Times</div>
  <div id="inner-tab-menu">
    <ul>
      <li class='themed_bg themed-dark-hover-background'>
        <%= link_to 'Reporting In TIme', new_reporting_time_path(:in_time => true) %>
      </li>
      <li class='themed_bg themed-dark-hover-background'>
        <%= link_to 'Reporting Out TIme', new_reporting_time_path(:in_time => false) %>
      </li>
    </ul>
  </div>
</div>

<div id="page-yield">
  <div class="bread_crumb">
    <a href="/user/dashboard">Home</a> <div class="bread-crumb-separator"> &gt; </div> 
    <a href="/finance">Employee</a> <div class="bread-crumb-separator"> &gt; </div>
    <a href="">Reporting Times</a> <div class="bread-crumb-separator"> &gt; </div>All
  </div>

  <div class="box">
    <div id="update_batch"></div>
    <div class="extender"></div>
  </div>
</div>
<% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
<h3>Reporting In times</h3>
<table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
  <tbody>
    <tr class="tr-head">
      <td>S.No</td>
      <td>Time In</td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <% @in_times.each_with_index do |reporting_time,i| %>
      <tr class="tr-odd">
        <td class="col-2"><%=h i+1 %></td>
        <td><%=h reporting_time.time_in %></td>
        <!-- <td><%#=h reporting_time.out_time %></td> -->
        <td>
          <%= link_to 'Edit', edit_reporting_time_path(reporting_time) %>
          <%= link_to 'Destroy', reporting_time, :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
    <% end %>
    
  </tbody>
</table>

<h3>Reporting out times</h3>
<table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
  <tbody>
    <tr class="tr-head">
      <td>S.No</td>
      <td>Time Out</td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <% @out_times.each_with_index do |reporting_time,i| %>
      <tr class="tr-odd">
        <td class="col-2"><%=h i+1 %></td>
        <td><%=h reporting_time.out_time %></td>
        <td>
          <%= link_to 'Edit', edit_reporting_time_path(reporting_time) %>
          <%= link_to 'Destroy', reporting_time, :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
    <% end %>
    
  </tbody>
</table>

<br />

