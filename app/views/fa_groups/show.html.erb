<% content_for :head do  %>
  <%= stylesheet_link_tag("observation_groups/show.css") %>
<% end %>
<div id="content-header">
  <%= show_header_icon %>
  <h1>Formative Assessment</h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'>Assessment Criteria</div>
  <div id="inner-tab-menu">
    <ul>
      <li class='themed_bg themed-dark-hover-background'><%= link_to_remote "New FA Criteria", :url => { :action => 'new_fa_criteria', :fa_group_id => @fa_group.id } %></li>
    </ul>
  </div>

</div>
<div id="page-yield">

  <div class="bread_crumb">
    <%= breadcrumb :fa_groups_show, @fa_group %>
    <%= render_breadcrumbs  %>
  </div>
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div id="fa_group_details">
    <%=render :partial=>'fa_group_summary'%>
  </div>
  <div id="fa_criterias">
    <%= render  :partial=>'fa_criterias' %>
  </div>
  <div id="modal-box" style="display:none;"></div>
</div>
