<div id="page-yield">
  <div class="box">
    <% form_remote_for @icse_weightage,:url=>{:controller=>"icse_settings",:id=>@icse_weightage.id,:action=>'update_icse_weightage'},:before=>"$('submit_button').disable()",:complete=>"setTimeout(function(){$('submit_button').enable();},5000)" do |f| %>
      <div id="form-errors"></div>
      <%= error_messages_for :icse_weightage %>
      <div class="label-field-pair">
        <label for="category_name">Name</label>
        <div class="text-input-bg"><%= f.text_field :name %></div>
      </div>
      <div class="label-field-pair">
        <label for="category_name">ICSE Exam Category</label>
        <div class="text-input-bg">
          <%= f.select :icse_exam_category_id ,@icse_exam_categories.map{|m| [m.name,m.id]} ,:prompt=>"Select an Exam Category" %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="category_name">EA Weightage (%)</label>
        <div class="text-input-bg"><%= f.text_field :ea_weightage %></div>
      </div>
      <div class="label-field-pair">
        <label for="category_name">IA Weightage (%)</label>
        <div class="text-input-bg"><%= f.text_field :ia_weightage %></div>
      </div>
      <div class="label-field-pair">
        <label for="category_name">Report Mark type</label>
        <div class="text-input-bg"><%= f.select :grade_type ,[["Grade and Mark", "GradeAndMark"], ["Grade", "Grade"],["Mark", "Mark"]],:prompt=>"Select"%></div>
      </div>
      <div class="label-field-pair">
        <label for="category_name">Co-Curricular</label>
        <div class="text-input-bg"><%= f.select :is_co_curricular ,[["No", false], ["Yes", true]]%></div>
      </div>
      <%= f.submit "", :value => "â–º Update", :class => "submit_button", :id => 'submit_button' %>
    <% end %>
    <div class="extender"></div>
  </div>
</div>
