<% if @icse_weightages.present? %>
<% form_remote_for @subject,:url=>{:controller=>:icse_settings,:action=>:update_subject_weightages,:id=>@subject.id},:before=>"j('.submit_button').val('Please Wait..')",:complete=>"j('.submit_button').val('► save')" do |f| %>
  <ul id="category-list">
    <li class="listheading">
      <div class="heading-name">Select Weightages</div>
      <div class="heading-edit">
      </div>
    </li>
    <% @icse_weightages.each do |weightage| %>
        <li class="list<%=cycle('odd', 'even')%>">
          <label>
            <div class="category-edit">
              <%= check_box_tag "subject[weightage_ids][]", weightage.id, @selected_weightages.include?(weightage)%>
            </div>
            <div class="category-name">
              <%= "#{weightage.name} (#{weightage.icse_exam_category.name})"  %>
            </div>
          </label>
        </li>
      <% end %>
  </ul>
  <%= f.submit "", :value => "► #{t('save')}", :class => "submit_button"%>
<% end %>
<% else %>
  <div class = "msg"><p class = "flash-msg"><%= t('no_weightages') %></p></div>
<% end %>
