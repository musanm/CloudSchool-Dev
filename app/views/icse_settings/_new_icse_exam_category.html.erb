<div id="page-yield">
  <div class="box">
    <% form_remote_for @exam_category,:url=>{:controller=>"icse_settings",:action=>'create_icse_exam_category'},:before=>"$('submit_button').disable()",:complete=>"setTimeout(function(){$('submit_button').enable();},5000)" do |f| %>
      <div id="form-errors"></div>
      <%= error_messages_for :exam_category %>
      <div class="label-field-pair">
        <label for="category_name">Name</label>
        <div class="text-input-bg"><%= f.text_field :name %></div>
      </div>
      <div class="label-field-pair">
        <label for="category_name">Description</label>
        <div class="text-input-bg"><%= f.text_field :description %></div>
      </div>
      <div class="label-field-pair">
        <label for="category_name">Detailed Student Report</label>
        <div class="text-input-bg"><%= f.select :is_detailed_report ,[["Yes", true],["No", false]]%></div>
      </div>
      <%= f.submit "", :value => "â–º Create", :class => "submit_button", :id => 'submit_button' %>
    <% end %>
    <div class="extender"></div>
  </div>
</div>
