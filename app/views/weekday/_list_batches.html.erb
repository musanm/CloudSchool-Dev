<div class="common_label_section">
  <label><%= t('batch') %>
  </label>
  <div class="common_selection_area">
    <%= select :exam_report, :batch_id,
      @batches.map {|b| [b.full_name, b.id]},
      {:prompt => "#{t('select_a_batch')}"},
      {:onChange => "#{remote_function(:url => {:action => "week"},
      :with => "'batch_id='+value",
      :before => "Element.show('loader1')",
      :success => "Element.hide('loader1')"
      )}"} %>
    <%= image_tag("loader.gif",
      :align => "absmiddle",
      :border => 0,
      :id => "loader1",
      :style =>"display: none;" ) %>
  </div>
</div>
