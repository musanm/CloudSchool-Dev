<div id="page-yield" class="available_sections1">
  <div class="page1"></div>
  <div class="section1 row" >
    <div class="hor_line"></div>
    <h2><%= t('employee_search_report') %></h2>
    <div class="hor_line"></div>
    <div id ="main_info">
      <h4> <%= "#{t('employee_text')} "+@data_hash[:searched_for].camelcase unless @data_hash[:searched_for].nil?%></h4>
    </div>
  </div>
  <div class="section1 row" id="table-headers" >
    <center>
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header">
          <td class="col-pdf sl_no"><%= t('sl_no') %></td>
          <td class="col-pdf name"><%= t('name') %></td>
          <td class="col-pdf e_dept"><%= t('department') %></td>
          <td class="col-pdf e_no"><%= t('employee_number') %></td>
          <td class="col-pdf j_date"><%= t('joining_date') %></td>
          <%if @data_hash[:parameters][:status]=='false'%>
            <td class="col-pdf j_date"><%= t('leaving_date') %></td>
          <%end%>
        </tr>
  <% @data_hash[:employees].each_with_index do |employee1,i| %>
    <% c =cycle('even','odd ') %>
          <tr class="<%= "#{c}" %>">
            <td class="col-pdf sl_no"><%= i+1 %></td>
            <td class="col-pdf name"><%= employee1.first_name %></td>
            <td class="col-pdf e_dept"><%= employee1.employee_department.name %></td>
            <td class="col-pdf e_no"><%= employee1.employee_number%></td>
            <td class="col-pdf j_date"><%= format_date(employee1.joining_date) %></td>
            <%if @data_hash[:parameters][:status]=='false'%>
              <td class="col-pdf j_date"><%= format_date(employee1.updated_at) %></td>
            <%end%>
          </tr>
        <% end %>
        </table>
      </center>
    </div>
</div>
