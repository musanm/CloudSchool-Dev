<% if !@obs_groups.empty? %>
  <% form_remote_for @course,:url=>{:controller=>:observation_groups,:action=>:update_course_obs_groups,:id=>@course.id} do |f| %>


    <table align="center" width="100%" cellpadding="1" cellspacing="1" id="listing">
      <tr class="tr-head">
        <td></td>
        <td>Observation group</td>
        <td><%=t('description')%></td>
      </tr>
      <% @obs_groups.each do |g| %>
        <tr class="tr-<%= cycle('odd', 'even')%>">
          <td class="col-4">
            <span class="weekday_name">
              <%= check_box_tag "course[observation_group_ids][]", g.id, @course.observation_groups.include?(g)%></span>
          </td>
          <td class="col-7">
            <%= g.name %>
          </td>
          <td class="col-7"><%=g.desc%></td>
        </tr>
      <% end %>
    </table>
    <%= f.submit "", :value => "â–º #{t('save')}", :class => "submit_button" %>
  <% end %>
<% else %>
  <div class = "msg"><p class = "flash-msg"><%= t('no_observation_groups') %></p></div>
<% end %>
