<div id="content-header">
  <h1>Attachments</h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'>All</div>
  <div id="inner-tab-menu">
    <ul>
      <% if @attach_signatures.count < 2 %>
        <li class='themed_bg themed-dark-hover-background'><%= link_to "Add New", new_attach_signature_path %></li>
      <% end%>
    </ul>

  </div>
</div>

<div id="page-yield">
  <div class="bread_crumb">
    <a href="<%= root_path %>">Home</a> 
    <div class="bread-crumb-separator"> &gt; </div> 
    <%= link_to "Exam" ,:controller => "exam", :action =>"index" %>
    <div class="bread-crumb-separator"> &gt; </div> 
    <%=  link_to "Settings", :controller=> "exam",:action=>'settings' %>
    <div class="bread-crumb-separator"> &gt; </div> All Attachments
  </div>

  <div class="box">
    <div id="update_batch"></div>
    <div class="extender"></div>
  </div>
</div>
<table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
  <tbody>
    <tr class="tr-head">
      <td>Sl  no.</td>
      <td>Name</td>
      <td>Image</td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>

    <% @attach_signatures.each_with_index do |attach_signature,i| %>
      <tr class="tr-odd">
        <td class="col-1">
          <%= i+1 %>
        </td>

        <td class="col-2">
          <%=h attach_signature.name %>
        </td>

        <td class="col-2" style="width: 100px;height: 100px;">
        	<% if attach_signature.photo.present? %>
        		<%= image_tag attach_signature.photo.url,:style=>"width: 100px;height: 100px;" %>
        	<% else %>
        		<i>No Image</i>
        	<% end %>
        </td>


        <td class="col-7">
			    <%= link_to 'Edit', edit_attach_signature_path(attach_signature) %>
          <%= link_to 'Destroy', attach_signature, :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
