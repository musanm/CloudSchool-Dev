<div id="content-header">
  <h1>Attachments</h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'>Edit</div>
  <div id="inner-tab-menu">
  </div>
</div>
<div id="page-yield">
  <div class="bread_crumb">
    <a href="<%= root_path %>">Home</a> 
    <div class="bread-crumb-separator"> &gt; </div> 
    <%= link_to "Exam" ,:controller => "exam", :action =>"index" %>
    <div class="bread-crumb-separator"> &gt; </div> 
    <%=  link_to "Settings", :controller=> "exam",:action=>'settings' %>
    <div class="bread-crumb-separator"> &gt; </div> 
    <%=  link_to "Attachments", :controller=> "attach_signatures",:action=>'index' %>
    <div class="bread-crumb-separator"> &gt; </div> Edit Attachment
  </div>

  <div class="box">
    <div id="update_batch"></div>
    <div class="extender"></div>
  </div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <% form_for(@attach_signature, :html=> {:multipart=>true}) do |f| %>
    <%= f.error_messages %>
    <div id="admission1_form">
      <div class="label-field-pair">
        <label for="student_grade">Name</label>
        <div class="text-input-bg">
          <input id="attach_signature_name" size="30" type="text" value=<%= @attach_signature.name %> disabled="disabled">
        </div>
      </div>
    </div>
    <div id="admission1_form">
      <div class="label-field-pair">
        <label for="student_grade">Photo<span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= f.file_field :photo, :size=>12 %></div>
      </div>
    </div>
    <%= submit_tag "", :value => "► #{t('save_and_proceed')}", :class => "submit_button", :disable_with => "► #{t('please_wait')}" %>
  <% end %>
</div>