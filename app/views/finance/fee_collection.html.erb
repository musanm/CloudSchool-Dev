<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('fees_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('fees_collection_date') %></div>
</div>
<div id="page-yield">
   <div class="bread_crumb">
    <%= make_breadcrumb %>
    <%= render_breadcrumbs  %>
  </div>
  <div id="flash_box"></div>
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <div class="box">
    <div id ="message"></div>
    <div class ="link-box">
      <div class="link-heading"><%= link_to "#{t('create_fee_collection')}", :action => 'fee_collection_new' %></div>
      <div class="link-descr"><%= t('creates_new_fee_collecting_dates') %> </div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('view')}",:action => "fee_collection_view" %></div>
      <div class="link-descr"><%= t('displays_collection_dates') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('manage')} #{t('fee_collections')}",:controller=>"finance_extensions",:action => "discount_particular_allocation" %></div>
      <div class="link-descr"><%= "#{t('assign')} #{t('or')} #{t('unassign')} #{t('particulars')} #{t('and')} #{t('discounts')}" %></div>
    </div>

    <div id="modal-box" style="display:none;overflow:hidden; "></div>
  </div>
</div>
