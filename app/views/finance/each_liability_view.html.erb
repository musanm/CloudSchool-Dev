<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('liability_view') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= @liability.title %></div>
</div>
<div id="page-yield">
<div class="bread_crumb">
    <% breadcrumb :finance_each_liability_view, @liability %>
    <%= render_breadcrumbs  %>
  </div>

  <div id="liability-body">
    <div id="liability-title"><%= t('liability_name') %> : <%= @liability.title%></div>
    <div id="liability-description"><%= @liability.description %></div>
    <br/>
    <div id="liability-amt" class="themed_text"><%= t('amount') %> : <%=@currency_type + " "%><%= precision_label(@liability.amount) %></div>
    <div id="liability-date" class="themed_text"><%= t('created_at') %> : <%= format_date(@liability.created_at,:format=>:long_date) %></div>
  </div>



</div>
