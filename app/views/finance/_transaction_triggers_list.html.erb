<% unless @triggers.blank? %>
  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
      <td><%= t('sl_no') %></td>
      <td><%= t('title') %></td>
      <td><%= t('percentage') %></td>
      <td><%= t('category') %></td>
      <td></td>
    </tr>
    <tr class="tr-blank"></tr>
    <% @triggers.each_with_index do |trigger,i| %>
      <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-1"><%= i+1 %></td>
        <td class="col-4"><%= trigger.title %></td>
        <td class="col-4"><%= trigger.percentage %></td>
        <td class="col-4"><%=trigger.finance_category.name%></td>
        <td class="col-4">
          <div id="edit_link"><%= link_to_remote t('edit_text'),:url=>{:controller=>'finance',:action=>'transaction_trigger_edit',:id=>trigger.id},:html=>{:class=>"themed_text"} %></div>
          <div id="delete_link"><%= link_to_remote t('delete_text'),:confirm=>"#{t('delete_confirm_msg')}",:url=>{:controller=>'finance',:action=>'transaction_trigger_delete',:id=>trigger.id},:html=>{:class=>"themed_text"} %></div>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p class="flash-msg"><%=t('no_triggers')%></p>
<% end %>