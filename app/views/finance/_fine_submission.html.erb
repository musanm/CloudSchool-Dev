<label class="head_label"><%= "#{t('create_text')} #{t('fine')}" %><span></span></label>



<div id="grading-levels-form">

  <% form_remote_for :fine, :url => {:action => 'update_fine_ajax' }, :before=>"$('add_fine').disable()",:complete=>"setTimeout(function(){$('add_fine').enable();},5000)" do |form| %>
    <%= form.hidden_field :student, :value => @student.id %>
    <%= form.hidden_field :batch_id, :value => @batch.id %>
    <%= form.hidden_field :date, :value => @date.id %>

    <div id="form-errors"></div>

    <div class="label-field-pair">
      <div class="label-container"><label><%= "#{t('amount')}" %><span class="necessary-field">*</span></label></div>
      <div class="input-container"><%= form.text_field :fee, :value=>'' ,:id=>"fine_fee", :class=>'precision_text' %></div>
    </div>
    
    


    <div class="extender"></div>
    <div id="submit-button">
      <%= submit_tag "► #{t('create_text')}",:id=>'add_fine', :class => 'modal-box-submit_button', :disable_with => "► #{t('create_text')}" %>
    </div>
  <% end %>
</div>