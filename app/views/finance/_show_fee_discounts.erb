<% unless @discounts.blank? %>

    <% unless flash[:notice].nil? %>
        <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>

    <table id="listing">
      <tr class="tr-head">
        <td><%= t('name') %></td>
        <td><%= t('student_category') %></td>
        <td><%= t('student_name') %></td>
        <td><%= t('particular') %></td>
        <td><%= t('discount') %></td>

        <td></td>

      </tr>

      <% @discounts.each do |f| %>
          <tr class="tr-<%= cycle('odd', 'even') %> ">
            <td class="col-3"><%= f.name %></td>
            <% if f.master_receiver_type == "StudentCategory" %>
                <td class="col-3"><%= f.category_name %></td>
                <td class="col-3"></td>
                <td class="col-3"></td>
            <% elsif f.master_receiver_type == "Student" %>
                <td class="col-3"></td>
                <td class="col-3"><%= f.student_name %></td>
                <td class="col-3"></td>
            <% elsif f.master_receiver_type == "Batch" %>
                <td class="col-3"></td>
                <td class="col-3"></td>
                <td class="col-3"></td>
            <% elsif f.master_receiver_type == "FinanceFeeParticular" %>
                <td class="col-3">
                  <%= f.receiver_type=='StudentCategory'? f.receiver.name : '' %>
                </td>
                <td class="col-3">
                  <%= f.receiver_type=='Student'? f.receiver.full_name : '' %>
                </td>
                <td class="col-3"><%= f.master_receiver.name %></td>
            <% end %>
            <td class="col-3">
              <%= f.is_amount? ? "#{precision_label(f.discount)}#{(currency)}" : "#{precision_label(f.discount)}#{"(%)"}" %>

            </td>

            <td class="col-1">
              <div class="options">
                <span class="small"> <%= link_to_remote "#{t('delete_text')}", :confirm => "#{t('delete_confirm_msg')}", :url => {:action => 'delete_fee_discount', :id => f.id, :batch_id => f.batch_id} %></span>
                <% if f.collection_exist %>
                    <span class="small"><%= link_to_remote "#{t('edit_text')}", :url => {:action => 'edit_fee_discount', :id => f.id, :batch_id => f.batch_id} %>
                      |&nbsp; </span>

                <% else %>
                    <span class="small-strike"><%= t('edit_text') %></span>

                <% end %>

              </div>
            </td>
          </tr>
      <% end %>
    </table>

<% else %>
    <p class="flash-msg"> <%= t('no_discount_found') %></p>

<% end %>
