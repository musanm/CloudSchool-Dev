<label class="head_label"><%= "#{t('edit')} #{t('refund_rules')}" %><span></span></label>



<div id="grading-levels-form">

  <% form_remote_for @refund_rule,
                     :url=>{:action=>'refund_rule_update',
                            :id => @refund_rule.id}  do |form| %>

      <div id="form-errors"></div>

      <div class="label-field-pair">
        <div class="label-container"><label><%="#{t('refund_name')}" %><span class="necessary-field">*</span></label></div>
        <div class="input-container"><%= form.text_field :name %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><label><%="#{t('refund_validity')}" %><span class="necessary-field">*</span></label></div>
        <div class="input-container"><%= calendar_date_select_tag 'refund_rule[refund_validity]', I18n.l(@refund_rule.refund_validity || Date.today,:format=>:default), :popup=>"force",:class=>'due_date'%></div>
      </div>






      <div class="label-field-pair">
        <div class="label-container">
          <label><%= "#{t('type')}" %><span class="necessary-field"> </span></label></div>
        <div class="input-container" style="height: 26px;">
          <label style="width:auto;margin-left: 15px"> <%= t('percentage') %></label>
          <%= form.radio_button  :is_amount, false, :checked => "checked" ,:class=>'width40'%>
          <label style="width:auto"><%= t('amount') %></label>
          <%= form.radio_button  :is_amount, true ,:class=>'width40'%>
        </div>
      </div>
      <div class="label-field-pair">
        <div class="label-container">  <label><%= "#{t('value')}" %><span class="necessary-field">*</span></label></div>
        <div class="input-container"><%= form.text_field :amount, :value=> precision_label(@refund_rule.amount), :class=>'precision_text'%></div>
      </div>



      <div class="extender"></div>
      <div id="submit-button">
        <%=  submit_tag "► #{t('update')}",:class=>'submit_button',:disable_with => "► #{t('create_text')}" %>
      </div>
  <% end %>
</div>