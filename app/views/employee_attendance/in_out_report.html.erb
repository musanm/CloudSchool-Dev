
<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('employee_attendance_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'>In/Out Report</div>
<div id="inner-tab-menu">
  <ul>
    <%  if permitted_to? :emp_attendance,:employee_attendance %>
      <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('mini_report')}", :action => 'emp_attendance', :id=>@employee.id %></li>
    <% end %>
  </ul>
</div>
</div>
<div id="page-yield">
  <div class="bread_crumb">
  </div>
  <div class="box">

    <% form_remote_for(:advance_search, :url => 'individual_employee_in_out_attendance', :remote => true) do |f| %>
      <div id="error" style="color: red;"></div>
      <%= f.hidden_field  :id, :value=>@employee.id %>
      <div class="label-field-pair">
        <label for="student_course">Select Month:</label>
        <div  class="text-input-bg">
          <%= f.select :date, @dates.map{|d| d},:prompt=> "Select Month" %>
        </div>
      </div>

      <div class="label-field-pair">
        <label for="student_course"></label>
        <div  class="submit_btn">
          <%#= submit_tag "", :value => "► View", :class => "submit_button", :id => 'submit_button' %>
          <input class="submit_button" id="submit_button" name="commit" value="► View" type="button">
        </div>
      </div>
    <% end %>
  </div>

  </div>

  <div id="employeee_register" style="margin-top: 35px;">
    <%#= render :partial => "attendance_reports/individual_employee_in_out_attendance" %>
  </div>
</div>

<script type="text/javascript">
  j("#submit_button").click(function(){
    j("#employeee_register").html("")
    j("#employeee_register").append("<div align='center' style='margin-top: 100px;''><img src='/images/loading.gif'></div>");
    j("#error").html("");
    j("form").submit()
  });
</script>

