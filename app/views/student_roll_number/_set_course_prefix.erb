  <div class="label-field-pair">
    <label for="roll_number_prefix"><%= t('roll_number_prefix') %></label>
    <div class="text-input-bg" id="test">
      <%= text_field :course, :roll_number_prefix %>
      <div id="info"><%= t('max_characters') %></div>
    </div>
  </div>

   <div id="buttons">
    <%= submit_tag "Save",:class=>'submit_button',  :disable_with => "â–º #{t('please_wait')}" %>
    <%= link_to_remote "Cancel", :url => {:action => 'create_course_prefix'}, :html => {:class => "submit_button", :id => "cancel",:onclick=>"Modalbox.hide();"} %>
  </div>
<% end %>