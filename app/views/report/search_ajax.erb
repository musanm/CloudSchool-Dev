<table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
  <% unless @students_result.blank? %>
      <tr class="tr-head">
        <td>
          <%= t('sl_no') %>
        </td>
        <td>
          <%= t('first_name') %>
        </td>
        <td><%= t('batch') %></td>
        <td><%= t('adm_no') %></td>
        <% if roll_number_enabled? %>
          <td><%= t('roll_no') %></td>
        <% end %>

      </tr>
      <tr class="tr-blank"></tr>
      <% @students_result.each_with_index do |student, i| %>
          <tr class="tr-<%= cycle('odd', 'even') %>">
            <td class="col-1"><%= i+1 %></td>
            <td class="col-2"><%=  link_to student.full_name, :controller => "report", :action => "student_fees_headwise_report", :id => student.id%></td>
            <td class="col-2"><%= student.batch.full_name %></td>
            <td class="col-3"><%= student.admission_no %></td>
            <% if roll_number_enabled? %>
              <td class="col-3"><%= student.roll_number.nil? ? "-" : student.roll_number %></td>
            <% end %>
          </tr>
      <% end %>
  <% else %>

      <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-2"><%= t('no_students_found') %></td>
      </tr>
  <% end %>
</table>
