<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <% form_for(@term_exam) do |f| %>
    <%= f.error_messages %>
    <div id="admission1_form">

      <div class="label-field-pair">
        <label for="student_grade">Batch<span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= f.select :batch_id, @batches ,:prompt=> "Select Course" %></div>
      </div>

      <div class="label-field-pair">
        <label for="student_grade">Name<span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= f.text_field :name %></div>
      </div>

      <div class="label-field-pair">
        <label for="student_grade">Priority<span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= f.text_field :order_priority %></div>
      </div>

    </div>
    <%= submit_tag "", :value => "► #{t('save_and_proceed')}", :class => "submit_button", :disable_with => "► #{t('please_wait')}" %>
  <% end %>
</div>

