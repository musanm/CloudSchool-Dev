<div id="content-header">
  <h1>Fee Invoice settings</h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'>Edit</div>
  <div id="inner-tab-menu">
  </div>
</div>
<div id="page-yield">
  <div class="bread_crumb">
    <a href="/user/dashboard">Home</a> <div class="bread-crumb-separator"> &gt; </div> 
    <a href="/finance">Finance</a> <div class="bread-crumb-separator"> &gt; </div>
    <a href="/finance/fees_index">Fees</a> <div class="bread-crumb-separator"> &gt; </div>
    <a href="/bank_details">Fee Invoice settings</a> <div class="bread-crumb-separator"> &gt; </div> Edit
  </div>

  <div class="box">
    <div id="update_batch"></div>
    <div class="extender"></div>
  </div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <% form_for(@bank_detail, :html=> {:multipart=>true}) do |f| %>
    <%= f.error_messages %>
    <div id="admission1_form">
      <div class="label-field-pair">
        <div class="text-input-bg">
          <%= f.hidden_field :school_id %>

        </div>
      </div>
    </div>
    <div id="admission1_form">
      <div class="label-field-pair">
        <label for="student_grade">Bank Name</label>
        <div class="text-input-bg">
          <%= f.text_field :bank_name %>
        </div>
      </div>
    </div>
    <div id="admission1_form">
      <div class="label-field-pair">
        <label for="student_grade">Bank Account No</label>
        <div class="text-input-bg">
          <%= f.text_field :account_no %>
        </div>
      </div>
    </div> 
    <div id="admission1_form">
      <div class="label-field-pair">
        <label for="student_grade">Message</label>
        <div class="text-input-bg">
        </div>
      </div>
    </div>
    <%= f.text_area :message %>
    <div id="admission1_form">
      <div class="label-field-pair">
        <label for="student_grade">Invoice Design</label>
        <div class="text-input-bg">
          <%= f.select :invoice_design, ["Vertical", "Horizontal"] %>
        </div>
      </div>
    </div>
    <div id="admission1_form">
      <div class="label-field-pair">
        <label for="student_grade">Show Late Fee</label>
        <div class="text-input-bg">
          <%= f.check_box :show_late_fee %>
        </div>
      </div>
    </div>
    <div id="admission1_form">
      <div class="label-field-pair">
        <label for="student_grade">Amount</label>
        <div class="text-input-bg">
          <%= f.text_field :amount %>
        </div>
      </div>
    </div>
    <div id="admission1_form">
      <div class="label-field-pair">
        <label for="student_grade">logo<span class="necessary-field">*</span> </label>
        <div class="text-input-bg"><%= f.file_field :avatar, :size=>12 %></div>
      </div>
    </div>

    <% if @bank_detail.invoice_design == "Vertical" %>
      <hr>
      <div id="admission1_form">
        <div class="label-field-pair">
          <label for="student_grade">Display Discounts</label>
          <div class="text-input-bg">
            <%= f.check_box :remove_discounts %>
          </div>
        </div>
      </div>
      <div id="admission1_form">
        <div class="label-field-pair">
          <label for="student_grade">Display End Date</label>
          <div class="text-input-bg">
            <%= f.check_box :remove_end_date %>
          </div>
        </div>
      </div>
      <div id="admission1_form">
        <div class="label-field-pair">
          <label for="student_grade">Display Arrears</label>
          <div class="text-input-bg">
            <%= f.check_box :remove_arrears %>
          </div>
        </div>
      </div>
      <div id="admission1_form">
        <div class="label-field-pair">
          <label for="student_grade">Display Invoice</label>
          <div class="text-input-bg">
            <%= f.select :display_type, [4, 3] %><br>
          </div>
        </div>
      </div>

      <div id="admission1_form">
        <div class="label-field-pair">
          <label for="student_grade"></label>
          <div class="text-input-bg">
            <%= f.text_field :copy_name_one, :placeholder=>"1" %>
          </div>
        </div>
      </div>
      <div id="admission1_form">
        <div class="label-field-pair">
          <label for="student_grade"></label>
          <div class="text-input-bg">
            <%= f.text_field :copy_name_two, :placeholder=>"2" %>
          </div>
        </div>
      </div>
      <div id="admission1_form">
        <div class="label-field-pair">
          <label for="student_grade"></label>
          <div class="text-input-bg">
            <%= f.text_field :copy_name_three, :placeholder=>"3" %>
          </div>
        </div>
      </div>
      <div id="admission1_form hide">
        <div class="label-field-pair">
          <label for="student_grade"></label>
          <div class="text-input-bg">
            <%= f.text_field :copy_name_four, :placeholder=>"4" %>
          </div>
        </div>
      </div>
    <% end %>
      <%= f.submit"", :value => "► #{t('save_and_proceed')}", :class => "submit_button", :disable_with => "► #{t('please_wait')}" %>
  <% end %>
</div>

<style>
  #bank_detail_message{
    -webkit-border-radius: 10px;
    background: #EEEEEE none repeat scroll 0 0;
    border: 1px solid #C6C6C6;
    font-family: Arial;
    height: 190px;
    padding: 5px;
    width: 520px;
  }
</style>
