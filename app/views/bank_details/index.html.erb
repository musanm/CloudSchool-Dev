<div id="content-header">
  <h1>Fee Invoice settings</h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'>All</div>
  <div id="inner-tab-menu">
    <ul>
      <%if @bank_details.count < 1%>
        <li class='themed_bg themed-dark-hover-background'><%= link_to 'New Bank detail', new_bank_detail_path %>
      <%end%>    
    </ul>

  </div>
</div>

<div id="page-yield">
  <div class="bread_crumb">
    <a href="/user/dashboard">Home</a> <div class="bread-crumb-separator"> &gt; </div> 
    <a href="/finance">Finance</a> <div class="bread-crumb-separator"> &gt; </div>
    <a href="/finance/fees_index">Fees</a> <div class="bread-crumb-separator"> &gt; </div>Fee Invoice settings
  </div>

  <div class="box">
    <div id="update_batch"></div>
    <div class="extender"></div>
  </div>
</div>
<table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
  <tbody>
    <tr class="tr-head">
      <td>Bank Name</td>
      <td>Account no</td>
      <td>Image</td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>

    <% @bank_details.each do |bank_detail| %>
      <tr class="tr-odd">
        <td class="col-2">
          <%=h bank_detail.bank_name %>
        </td>

        <td class="col-2">
          <%=h bank_detail.account_no %>
        </td>

        <td class="col-2" style="width: 100px;height: 100px;">
          <% if bank_detail.avatar.present? %>
            <%= image_tag bank_detail.avatar.url,:style=>"width: 100px;height: 100px;" %>
          <% else %>
            <i>No Image</i>
          <% end %>
        </td>



        <td class="col-6">
          <%= link_to 'Edit', edit_bank_detail_path(bank_detail) %>
          <%= link_to 'Destroy', bank_detail, :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
