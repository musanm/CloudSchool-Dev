<% content_for :head do %>
  <%= javascript_include_tag "buildings" %>
  <%= javascript_include_tag :defaults, :cache => true %>
<% end %>

<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('buildings') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('add_rooms') %></div>
</div>

<div id="page-yield">
  <div class="bread_crumb">
    <%= make_breadcrumb %>
    <%= render_breadcrumbs  %>
  </div>
  
  <div class="form">
    <% form_for [@building, @classroom] do |f| %>
      <%= f.error_messages %>
      <div class="label-field-pair">
        <div class="label-container"><%= f.label :name, "#{t('classroom_name')}" + " :" %></div>
        <div class="input-container"><%= f.text_field :name %></div>
      </div>
      <div class="label-field-pair">
        <div class="label-container"><%= f.label :capacity, "#{t('capacity')}" + " :" %></div>
        <div class="input-container"><%= f.text_field :capacity %></div>
      </div>
      <%= f.submit "#{t('save')}",:class=>"submit_button", :disable_with => "#{t('please_wait')}" %>
    <% end %>
    <div></div>
  </div>
</div>