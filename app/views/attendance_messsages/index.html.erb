<div id="content-header">
  <h1>Attendance Messages</h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'>All</div>
  <div id="inner-tab-menu">
    <ul>
      <%# if @attach_signatures.count < 2 %>
        <li class='themed_bg themed-dark-hover-background'><%= link_to "Add New", new_attach_signature_path %></li>
      <%# end%>
    </ul>

  </div>
</div>

<div id="page-yield">
  <div class="bread_crumb">
    <a href="<%= root_path %>">Home</a> 
    <div class="bread-crumb-separator"> &gt; </div> 
    <%#= link_to "Exam" ,:controller => "exam", :action =>"index" %>
    <!-- <div class="bread-crumb-separator"> &gt; </div>  -->
    <%#=  link_to "Settings", :controller=> "exam",:action=>'settings' %>
    <div class="bread-crumb-separator"> &gt; </div> Attendance Messages
  </div>

  <div class="box">
    <div id="update_batch"></div>
    <div class="extender"></div>
  </div>
</div>

<table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head" style="text-align: center;">
      <th>In message</th>
      <th>Out message</th>
      <th>Absent message</th>
      <th>Action</th>
    </tr>

    <% @attendance_messsages.each do |attendance_messsage| %>
      <tr class="tr-odd" style="text-align: center;">
        <td><%=h attendance_messsage.in_message %></td>
        <td><%=h attendance_messsage.out_message %></td>
        <td><%=h attendance_messsage.absent_message %></td>
        <td><%= link_to 'Edit', edit_attendance_messsage_path(attendance_messsage) %></td>
      </tr>
    <% end %>
  
</table>
