<div id="content-header">
  <h1>Automated SMS</h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'>All</div>
  <div id="inner-tab-menu">
    <ul>
      <%# if @attach_signatures.count < 2 %>
        <li class='themed_bg themed-dark-hover-background'><%= link_to 'Edit', edit_attendance_messsage_path(@attendance_messsage) %></li>
      <%# end%>
    </ul>

  </div>
</div>
<% unless flash[:notice].nil? %>
  <p class="flash-msg"> <%= flash[:notice] %> </p>
<% end %>
<div id="page-yield">
  <div class="bread_crumb">
    <a href="<%= root_path %>">Home</a> 
    <div class="bread-crumb-separator"> &gt; </div><a href="/configuration">Configuration</a>
    <div class="bread-crumb-separator"> &gt; </div><a href="/sms">SMS</a>
    <div class="bread-crumb-separator"> &gt; </div><a href="#">Automated SMS</a>
  </div>

  <div class="box">
    <div id="update_batch"></div>
    <div class="extender"></div>
  </div>
</div>

<table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
  <tr class="tr-head" style="text-align: center;">
    <th>In message</th>
    <th>Out message</th>
    <th>Absent message</th>
  </tr>
	<tr class="tr-odd" style="text-align: center;">
  	<td><%=h @attendance_messsage.in_message %></td>
  	<td><%=h @attendance_messsage.out_message %></td>
  	<td><%=h @attendance_messsage.absent_message %></td>
	</tr>
</table>