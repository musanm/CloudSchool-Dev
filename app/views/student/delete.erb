<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('students') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('remove_student') %></div>

</div>
<div id="page-yield">
<div class="bread_crumb">
    <% breadcrumb :student_delete, @student %>
    <%= render_breadcrumbs  %>
  </div>
  
<div id="errorExplanation" class="errorExplanation"><p class="warning"><%= t('cannot_delete_student') %></p></div>
  <ul class ="dependency_list">
    <% @dependency_list.uniq.each do |dependency|  %>
      <li><%= dependency %> </li>
    <% end %>
  </ul>
<div id ="note"><%= t('force_delete') %><%= link_to(t('click_here'),{ :controller => "student", :action => "destroy_dependencies" , :id => @student.id},:confirm => "#{t('delete_confirm_msg')}", :class => "themed_text")  %></div>
</div>
