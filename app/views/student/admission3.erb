<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('admission') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('emergency_contact_step3') %></div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
    <% breadcrumb :student_admission3, @student %>
    <%= render_breadcrumbs  %>
  </div>
  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <p class="flash-msg"><%= t('select_one_of_the_guardians') %></p>

  <% form_for :immediate_contact do |f| %>
    <ul id="parents-list">
      <%- @parents.each do |p| -%>
        <li class="list<%=cycle('odd', 'even')%>">
          <% if p.id==@student.id %>
            <%= f.radio_button "contact", p.id, {:checked => 'checked'} %> <%= p.full_name %>
          <% else %>
            <%= f.radio_button "contact",p.id, :checked => 'checked'%> <%= p.full_name %>
          <% end %>
        </li>
      <% end %>
    </ul>
    <div id="submit-button"><%= submit_tag "" , :value => "► #{t('finish')}", :id => 'finish-button' , :disable_with => "► #{t('please_wait')}" %></div>
  <% end %>
</div>
