<% content_for :head do  %>
  <%= stylesheet_link_tag 'exam/index.css' %>
<% end %>
<div id="content-header">
  <%= show_header_icon %>
  <h1>ICSE Reports</h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'>Home</div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= make_breadcrumb %>
    <%= render_breadcrumbs  %>
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">

    <% if Configuration.find_by_config_key("ICSE").config_value=="1" %>
      <%  if permitted_to? :generate_reports , :icse_reports %>
        <div class="link-box">
          <div class="link-heading"><%= link_to "Generate Reports",:action=>'generate_reports' %></div>
          <div class="link-descr">Generate ICSE Exam Report from the entered score </div>
        </div>
      <% end %>
      <div class="link-box">
        <div class="link-heading"><%= link_to "View Student Report",:action=>'student_wise_report' %></div>
        <div class="link-descr">View ICSE student wise report </div>
      </div>
      <div class="link-box">
        <div class="link-heading"><%= link_to "Subject-wise Report",:action=>'subject_wise_report' %></div>
        <div class="link-descr">Generate ICSE subject wise report </div>
      </div>
      <div class="link-box">
        <div class="link-heading"><%= link_to "Consolidated Report",:action=>'consolidated_report' %></div>
        <div class="link-descr">Generate ICSE consolidated report </div>
      </div>
    <% end %>
    <div class="extender"></div>
  </div>
</div>

