<% content_for :head do  %>
  <%= stylesheet_link_tag 'cce_reports/create_reports.css' %>
<% end %>
<div id="content-header">
  <%= show_header_icon %>
  <h1>ICSE Reports</h1>
<div class='header-sep'>|</div>
<div class='sub-header'>Generate ICSE Report</div>

<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "View Scheduled Jobs", scheduled_task_path(:job_object=>"Batch", :job_type=>"4") %></li>
  </ul>
</div>
</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= make_breadcrumb %>
    <%= render_breadcrumbs  %>
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <% unless flash[:error].blank? %>
    <div class="errorExplanation" id="errorExplanation">
      <p>There where some problems</p>
      <ul>
        <% flash[:error].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="box">
    <% form_for :course, :url=>{:action=>:generate_reports} do |f|  %>
      <div class="label-field-pair">
        <label for="student_course"><%= "#{t('select_course')}" %>:
          <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %>
        </label>
        <div class="text-input-bg">
          <%= select :course, :id,
            @courses.map {|b| [b.course_name + " " + b.section_name, b.id]},
            {:prompt => "#{t('select_a_course')}"},
            {:onChange => "#{remote_function(:url => {:action=>"batches_ajax"},:method=>:get,
            :with => "'course_id='+ value +'&type=list'",
            :before => "Element.show('loader')",
            :success => "Element.hide('loader')",
            :update => "update_batch"
            )}"} %>
        </div></div>

      <div id="update_batch" ></div>
      <%= submit_tag "", :value => "► #{t('generate_text')}", :class => "submit-button", :disable_with => "► #{t('please_wait')}" %>
    <% end %>
    <div class="extender"></div>
  </div></div>
