<% if @batch.present?  %>
  <% unless @students.empty?  %>
    <div class="list_name">
      <%= t("students_in_batch") %>
      <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %>
    </div>
    <ul class="student_list">
      <% @students.each_with_index do |s,i| %>
        <li class="student_names">
          <% if i==0 %>
            <a href="#" id="<%=s.id%>"  class="student-link active-link themed_text" > <%= s.full_name %></a>
          <% else %>
            <a href="#" id="<%=s.id%>"  class="student-link" > <%= s.full_name %></a>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="list_name">
      <div id="flash-box"><p class="flash-msg" style="width: 978px"> No students present in this batch. </p></div>
    </div>
  <% end %>
<% end %>

<script type="text/javascript">
  j('.student-link').click(function(){
    set_active(this);
    draw_report(this)
  });

  function set_active(e){
    j('.active-link').each(function(){
      this.removeClassName('active-link themed_text');
    });
    e.addClassName('active-link themed_text')
  }

  function draw_report(e){
    Element.show('loader')
    new Ajax.Request('/icse_reports/student_report',
    {asynchronous:true, evalScripts:true,
      parameters:'student_id='+e.id+'&batch_id=<%= @batch.present?? @batch.id : "" %>',onSuccess:function(request){Element.hide('loader')}
    })
  }
</script>